FROM ghcr.io/astral-sh/uv:python3.12-trixie-slim

RUN adduser --disabled-password agentbeats
USER agentbeats
WORKDIR /home/agentbeats/paper-extractor

# Copy dependency files first for better layer caching
COPY --chown=agentbeats pyproject.toml uv.lock README.md ./

# Install all dependencies including evaluator extras (this will install CUDA torch from lock file)
RUN \
    --mount=type=cache,target=/home/agentbeats/.cache/uv,uid=1000 \
    UV_LINK_MODE=copy uv sync --locked --no-dev --group evaluator

# Replace CUDA torch with CPU-only version to save ~2.4GB
# Uninstall CUDA torch and all NVIDIA CUDA packages
RUN \
    --mount=type=cache,target=/home/agentbeats/.cache/uv,uid=1000 \
    uv pip uninstall -y torch torchvision torchaudio || true && \
    uv pip uninstall -y nvidia-cublas-cu12 nvidia-cudnn-cu12 nvidia-cufft-cu12 nvidia-curand-cu12 nvidia-cusolver-cu12 nvidia-cusparse-cu12 nvidia-cusparselt-cu12 nvidia-nccl-cu12 nvidia-nvjitlink-cu12 nvidia-nvshmem-cu12 nvidia-nvtx-cu12 nvidia-cuda-cupti-cu12 nvidia-cuda-nvrtc-cu12 nvidia-cuda-runtime-cu12 nvidia-cufile-cu12 || true

# Install CPU-only PyTorch
RUN \
    --mount=type=cache,target=/home/agentbeats/.cache/uv,uid=1000 \
    uv pip install torch --index-url https://download.pytorch.org/whl/cpu

# Copy src directory for agentbeats module (needed for green_executor, models, tool_provider)
COPY --chown=agentbeats src src

# Copy scenarios directory (includes helpers.py, data files, templates, and evaluator script)
COPY --chown=agentbeats scenarios scenarios

ENTRYPOINT ["uv", "run", "scenarios/dairy-paper/paper_evaluator.py"]
CMD ["--host", "0.0.0.0"]
EXPOSE 9009

