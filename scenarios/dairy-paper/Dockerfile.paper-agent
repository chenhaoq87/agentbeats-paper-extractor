FROM ghcr.io/astral-sh/uv:python3.12-trixie-slim

RUN adduser --disabled-password agentbeats
USER agentbeats
WORKDIR /home/agentbeats/paper-extractor

# Copy dependency files first for better layer caching
COPY --chown=agentbeats pyproject.toml uv.lock README.md ./

# Install only core dependencies (exclude bert-score which pulls in torch)
RUN \
    --mount=type=cache,target=/home/agentbeats/.cache/uv,uid=1000 \
    UV_LINK_MODE=copy uv sync --locked --no-dev

# Copy src directory for agentbeats module (needed for imports)
COPY --chown=agentbeats src src

# Copy scenarios directory (includes helpers.py and the agent script)
COPY --chown=agentbeats scenarios scenarios

ENTRYPOINT ["uv", "run", "scenarios/dairy-paper/paper_agent.py"]
CMD ["--host", "0.0.0.0"]
EXPOSE 9019

